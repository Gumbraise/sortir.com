{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}

{% block body %}
    <section class="font-light sm:text-xl text-gray-800 body-font">
        <div class="container mx-auto flex px-5 py-4 md:py-24 md:flex-row flex-col items-center">
            <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8 mx-auto">
                <div class="w-full max-w-md space-y-8">
                    <div>
                        <img class="mx-auto h-12 w-auto"
                             src="{{ asset('images/static/sortircom.png') }}" alt="Logo Sortir.com">
                        <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Réinitialisez votre
                            <span
                                    class="font-black text-transparent bg-clip-text bg-gradient-to-br from-green-600 to-lime-400">mot de passe</span>
                            !
                        </h1>
                    </div>
                    {{ form_start(requestForm) }}
                    <div class="mt-8 space-y-6">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        <div class="-space-y-px rounded-md shadow-sm">
                            <div>
                                <div class="sr-only">{{ form_label(requestForm.email) }}</div>
                                {{ form_widget(requestForm.email, {
                                    'attr': {
                                        'class': 'relative block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm'
                                    }
                                }) }}
                                <div>
                                    <small>
                                        Entrez votre adresse mail et nous allons vous envoyer un lien de
                                        réinitialisation de votre mot de passe.
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div>
                            <button type="submit"
                                    class="group relative flex w-full justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                                Suivant
                            </button>
                        </div>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}