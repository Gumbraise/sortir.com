{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="font-light sm:text-xl text-gray-800 body-font">
        <div class="container mx-auto flex px-5 py-4 md:py-24 md:flex-row flex-col items-center">
            <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8 mx-auto">
                {{ form_start(registrationForm) }}
                <div class="w-full max-w-md space-y-8">
                    <div>
                        <img class="mx-auto h-12 w-auto"
                             src="{{ asset('images/static/sortircom.png') }}" alt="Logo Sortir.com">
                        <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Créez votre compte
                            <span
                                    class="font-black text-transparent bg-clip-text bg-gradient-to-br from-green-600 to-lime-400">Sortir.com</span>
                            gratuitement !
                        </h1>
                    </div>
                    <div class="mt-8 space-y-6">
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="text-red-600 text-center"
                                 role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        <div class="-space-y-px rounded-md shadow-sm">
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.pseudo) }}</div>
                                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm'} }) }}
                            </div>
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.prenom) }}</div>
                                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm'} }) }}
                            </div>
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.nom) }}</div>
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm'} }) }}
                            </div>
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.telephone) }}</div>
                                {{ form_widget(registrationForm.telephone, {'attr': {'class': 'relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm'} }) }}
                            </div>
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.email) }}</div>
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm'} }) }}
                            </div>
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.plainPassword.first) }}</div>
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': "relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm"} }) }}
                            </div>
                            <div>
                                <div class="sr-only">{{ form_label(registrationForm.plainPassword.second) }}</div>
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': "relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm"} }) }}
                            </div>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': "h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-green-500"} }) }}
                                <span class="ml-2 block text-sm">{{ form_label(registrationForm.agreeTerms) }}</span>
                            </div>
                        </div>

                        <div>
                            <button type="submit"
                                    class="group relative flex w-full justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                                <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-green-500 group-hover:text-green-400"
                                         xmlns="http://www.w3.org/2000/svg"
                                         viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd"
                                              d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </span>
                                Suivant
                            </button>
                        </div>
                        <div class="text-sm text-center">
                            <p class="font-medium">J'ai déjà un compte.
                                <a href="{{ path('app_login') }}"
                                   class="text-green-600 hover:text-green-700">
                                    Connectez-vous !
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
