{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="font-light sm:text-xl text-gray-800 body-font">
        <div class="container mx-auto flex px-5 py-4 md:py-24 md:flex-row flex-col items-center">
            <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8 mx-auto">
                <div class="w-full max-w-md space-y-8">
                    <div>
                        <img class="mx-auto h-12 w-auto"
                             src="{{ asset('images/static/sortircom.png') }}" alt="Logo Sortir.com">
                        <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Connectez-vous à
                            votre compte
                            <span
                                    class="font-black text-transparent bg-clip-text bg-gradient-to-br from-green-600 to-lime-400">Sortir.com</span>
                            !
                        </h1>
                    </div>
                    <form class="mt-8 space-y-6" method="POST">
                        {% if error %}
                            <div class="text-red-600 text-center"
                                 role="alert">{{ error.messageKey|trans(error.messageData, 'security', 'fr_FR') }}</div>
                        {% endif %}

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="-space-y-px rounded-md shadow-sm">
                            <div>
                                <label for="inputEmail" class="sr-only">Votre email</label>
                                <input type="email"
                                       value="{{ last_username }}"
                                       name="email"
                                       placeholder="Adresse mail"
                                       id="inputEmail"
                                       class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm"
                                       autocomplete="email"
                                       required
                                       autofocus>
                            </div>
                            <div>
                                <label for="inputPassword" class="sr-only">Votre mot de passe</label>
                                <input type="password"
                                       name="password"
                                       placeholder="Mot de passe"
                                       id="inputPassword"
                                       class="relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-green-500 focus:outline-none focus:ring-green-500 sm:text-sm"
                                       autocomplete="current-password"
                                       required>
                            </div>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <input type="checkbox"
                                       id="_remember_me"
                                       class="h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-green-500"
                                       name="_remember_me">
                                <label for="_remember_me" class="ml-2 block text-sm">Se souvenir de
                                    moi</label>
                            </div>
                            <div class="text-sm">
                                <a href="{{ path('app_forgot_password_request') }}"
                                   class="font-medium text-green-600 hover:text-green-700">Mot de passe
                                    oublié</a>
                            </div>
                        </div>

                        <div>
                            <button type="submit"
                                    class="group relative flex w-full justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                                <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-green-600 group-hover:text-green-700"
                                         xmlns="http://www.w3.org/2000/svg"
                                         viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd"
                                              d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </span>
                                Suivant
                            </button>
                        </div>
                        <div class="text-sm text-center">
                            <p class="font-medium">Je n'ai pas encore de compte.
                                <a href="{{ path('app_register') }}"
                                   class="text-green-600 hover:text-green-700">
                                    Inscrivez-vous gratuitement !
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
